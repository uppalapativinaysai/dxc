public class RetailerSold {
	Scanner sc = new Scanner(System.in);
    int productNo;
    int productQuantity;
    double retailPrice;
    double Bill;
    public void display() {
    	System.out.println("enter the product no :");
    	productNo = sc.nextInt();
    	System.out.println("enter the produvctQunatity :");
    	productQuantity = sc.nextInt();
    	switch(productNo) {
    	case 1 : retailPrice = 22.50;
    	break;
    	case 2 : retailPrice = 44.50;
    	break;
    	case 3 :retailPrice = 9.98;
    	break;
    	default : System.out.println("enter valid productNO :");
    	}
    	System.out.println("your total bill is: " + productQuantity*retailPrice);
    }
	public static void main(String[] args) {
		
		RetailerSold r = new RetailerSold();
		r.display();
